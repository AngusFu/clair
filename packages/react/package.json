  "scripts": {
    "precommit": "pretty-quick --staged --pattern packages/react/** && lint-staged",
    "start": "yarn dev:site",
    "clean": "node bin/clean.js",
    "dev:site": "start-storybook -p 9002 --quiet",
    "type-check": "yarn build:es --noEmit --incremental false --target ESNext",
    "build:umd": "rollup -c",
    "build:es": "tsc -p tsconfig.es.json",
    "build:site": "build-storybook -c .storybook -o public",
    "build:undoInterop": "node bin/undoInterop.js",
    "build:reference": "node bin/addReference.js",
    "build:tscpath": "tscpaths -p tsconfig.es.json -s ./src -o ./dist/esm",
    "build:post": "yarn build:tscpath && yarn build:undoInterop && yarn build:reference",
    "build": "yarn build:es",
    "postbuild": "yarn build:post && yarn build:umd",
    "prepublishOnly": "yarn clean && yarn build",
    "lint": "eslint --ext .js,.ts,.tsx src/**",
    "fix": "yarn lint --fix",
    "format": "pretty-quick",
    "test": "cross-env NODE_ENV=test test=true jest --coverage",
    "test:update": "cross-env NODE_ENV=test test=true jest --updateSnapshot",
    "test:clean": "cross-env NODE_ENV=test test=true jest --clearCache",
    "icons": "node bin/generateIcons.js"
  },
  "browserslist": [
    "last 3 version",
    "> 1%",
    "ie >= 10"
  ],
  "license": "MIT",
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  }
