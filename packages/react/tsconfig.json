{
  "compilerOptions": {
    "incremental": true,
    "target": "es5",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "strict": true,
    "allowJs": true,
    "jsx": "react",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["./src/components/*"],
      "@src/*": ["./src/*"],
      "@assets/*": ["./assets/*"],
      "@styles/*": ["./src/styles/*"],
      "@utils/*": ["./src/utils/*"]
    }
  },
  "include": ["src", "types", "assets", "examples", ".storybook"]
}
