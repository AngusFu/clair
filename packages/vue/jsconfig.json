{
  "exclude": ["node_modules"],
  "include": ["./src/**/*", "./packages/**/*", ".storybook/**/*"],
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*"],
      "packages/*": ["./packages/*"]
    },
    "resolveJsonModule": true
  }
}
