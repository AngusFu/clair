{
  "name": "clair",
  "version": "0.2.6",
  "description": "A design system including principles, Vue components and resources",
  "main": "dist/clair.common.js",
  "module": "dist/clair.esm.js",
  "unpkg": "dist/clair.js",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "precommit": "lint-staged",
    "clean": "rimraf dist .site",
    "new": "node ./boilerplate",
    "bundle": "cross-env NODE_ENV=production clair-bundle",
    "prod": "cross-env NODE_ENV=production dokiv",
    "dev": "cross-env NODE_ENV=development dokiv -w",
    "build": "run-s clean prod bundle rawcss",
    "start": "npm run dev",
    "test": "jest",
    "rawcss": "postcss --no-map -u postcss-easy-import -u postcss-each -u postcss-for -o dist/clair.raw.css src/css/main.css"
  },
  "lint-staged": {
    "src/**/*.css": [
      "stylelint"
    ],
    "src/**/*.js": [
      "eslint"
    ],
    "src/**/*.vue": [
      "eslint"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/clair-design/clair.git"
  },
  "keywords": [
    "Design",
    "Vue",
    "Components"
  ],
  "author": "webzhao@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/clair-design/clair/issues"
  },
  "homepage": "https://github.com/clair-design/clair#readme",
  "devDependencies": {
    "@vue/test-utils": "^1.0.0-beta.11",
    "babel-eslint": "^7.2.3",
    "clair-bundle": "^1.0.6",
    "cross-env": "^5.1.1",
    "dokiv": "^2.2.2",
    "eslint": "^4.3.0",
    "eslint-config-neat": "^1.0.0",
    "eslint-plugin-html": "^3.1.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-pug": "^1.1.0",
    "eslint-plugin-standard": "^3.0.1",
    "fs-extra": "^5.0.0",
    "github-markdown-css": "^2.8.0",
    "highlight.js": "^9.12.0",
    "husky": "^0.14.3",
    "jest": "^22.1.2",
    "lint-staged": "^4.0.2",
    "npm-run-all": "^4.1.2",
    "postcss-cssnext": "^3.0.2",
    "postcss-each": "^0.10.0",
    "postcss-easy-import": "^3.0.0",
    "postcss-for": "^2.1.1",
    "postcss-import": "^10.0.0",
    "pug": "^2.0.0-rc.4",
    "rimraf": "^2.6.2",
    "stylelint": "^8.3.1",
    "stylelint-config-standard": "^17.0.0",
    "vue-jest": "^1.4.0"
  },
  "dependencies": {
    "feather-icons": "^4.0.1",
    "lodash": "^4.17.4",
    "object-assign": "^4.1.1",
    "vue-types": "^1.1.2"
  }
}
