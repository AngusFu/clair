{
  "name": "clair",
  "version": "0.1.0",
  "description": "A design system including principles, Vue components and resources",
  "main": "dist/clair.common.js",
  "module": "dist/clair.esm.js",
  "unpkg": "dist/clair.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "precommit": "lint-staged",
    "clean": "rimraf dist .site",
    "new": "clair add",
    "watch-build:lib": "clair watch-build",
    "watch-build:doc": "dokiv --watch",
    "build:lib": "cross-env NODE_ENV=production clair build",
    "build:doc": "cross-env NODE_ENV=production dokiv",
    "dev": "run-p watch-build:lib watch-build:doc",
    "build": "run-s clean build:lib build:doc"
  },
  "lint-staged": {
    "src/**/*.css": [
      "stylelint"
    ],
    "src/**/*.js": [
      "eslint"
    ],
    "src/**/*.vue": [
      "eslint"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/clair-design/clair.git"
  },
  "keywords": [
    "Design",
    "Vue",
    "Components"
  ],
  "author": "webzhao@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/clair-design/clair/issues"
  },
  "homepage": "https://github.com/clair-design/clair#readme",
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "clair-scripts": "^3.1.1",
    "cross-env": "^5.1.1",
    "dokiv": "^1.1.5",
    "eslint": "^4.3.0",
    "eslint-config-neat": "^1.0.0",
    "eslint-plugin-html": "^3.1.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-pug": "^1.1.0",
    "eslint-plugin-standard": "^3.0.1",
    "github-markdown-css": "^2.8.0",
    "glob": "^7.1.2",
    "highlight.js": "^9.12.0",
    "husky": "^0.14.3",
    "lint-staged": "^4.0.2",
    "npm-run-all": "^4.1.2",
    "postcss-cssnext": "^3.0.2",
    "postcss-each": "^0.10.0",
    "postcss-easy-import": "^3.0.0",
    "postcss-for": "^2.1.1",
    "postcss-import": "^10.0.0",
    "pug": "^2.0.0-rc.4",
    "rimraf": "^2.6.2",
    "rollup-plugin-buble": "^0.15.0",
    "rollup-plugin-commonjs": "^8.2.5",
    "rollup-plugin-json": "^2.3.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-postcss": "^0.5.4",
    "rollup-plugin-vue": "^2.4.1",
    "stylelint": "^8.3.1",
    "stylelint-config-standard": "^17.0.0"
  },
  "dependencies": {
    "feather-icons": "^4.0.1",
    "lodash": "^4.17.4",
    "md2vue": "^3.0.0-beta",
    "object-assign": "^4.1.1"
  }
}
