{
  "root": true,
  "extends": "neat",
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": false
    }
  },
  "env": {
    "browser": true,
    "node": true
  },
   // required to lint *.vue files
  "plugins": ["html", "pug"]
}
